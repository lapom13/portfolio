extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  //script(src='about.bundle.js')

block content
  h1 Страничка "Обо Мне"

  

  section.hero
    .hero__top
      .hero__links
        .hero__socials
          -
            var socials = [
              ['vk', 'http"//vk.com']
              ['gh', 'http"//github.com']
              ['in', 'http"//www.linkedin.com']
            ]
          ul.socials__list
          each iten in socials
            li.socials__item
            a(href=`${item[1]}`).socials__link
              +icon(item[1], 'socials__link-icon')
      
      .hero__menu
        a(href="#").hamburger  

    .hero__title
      .section-title
        img(src="", alt="").hero__pic

      .user.hero__user
        .user__avatar
        .user__desc
          .user__title
          .user__text

    a(href="#").hero__down-btn.down-btn

  section.about
    .about__col.about__left
      .about__triangle.about__triangle-left
        svg.triangle.triangle_fill_beige
      .about__left-content
        .block-title обо мне
      .user-description
        .user-description__img
          img.user-description__img-pic
        .user-description__data
          .user-description__title.subtitle кто я
          .user-description__text.text-content
            p Loaqsdeffffffffffffffffffffffffffffffffffffkahsdkfjhlkjahgkjhlakjdcbhvlkajhdsfljhasdlkfhaksjdhflkajshf
            p Loaqsdeffffffffffffffffffffffffffffffffffffkahsdkfjhlkjahgkjhlakjdcbhvlkajhdsfljhasdlkfhaksjdhflkajshf
    
    .about__col.about__right
      .about__triangle.about__triangle-right
        svg.triangle.triangle_fill_beige
      .subtitle чем я могу быть вам полезен
      .text-content Loaqsdeffffffffffffffffffffffffffffffffffffkahsdkfjhlkjahgkjhlakjdcbhvlkajhdsfljhasdlkfhaksjdhflkajshf
      .about__right-content
        .skills
        -
          var skills = [
            ['Frontend', [['HTML5', 80], ['CSS3', 80], ['JavaScript & jQuery', 80]]],
            ['Backend', [['PHP', 40], ['mySQL', 60], ['NodeJS & npm', 30], ['Mongo db', 65]]],
            ['WorkFlow', [['Git', 80], ['gulp', 70], ['Bower', 70]]]
          ]
          ul.skills__list
            each skillsrow in skills
            li.skills__item.skills-row
              .skills-row__title #{skillsrow[0]}
              each skill in skillsrow[1]
                li.skills-row__item
                  figure.skill(data-percents="70")
                      svg(viewBox="0 0 100 100" preserveAspectRatio="none").skill__figure
                        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under
                        circle(cx="50" cy="50" r="40").skill__circle.skill__circle_above
                      .skill__title #{skill[0]}

  section.map
    .map__data
      .contacts
        .contacts__title.subtitle Контакты
        address.contacts__data
          ul.contacts__list
          -
            var contacts = [
              ['skype', 'skype_kdn'],
              ['mail', 'astahov@gmail.com'],
              ['phone', '+7 931 2009324'],
              ['mapmark', 'г.Новосибирск, ул. Инская, д. 5']
            ]

            each item in contacts
            li.contacts__item
              .contacts__icon
                +icon(`../${item[0]}`, .contacts__icon-pic)
              .contacts__name #{item[0]}

  footer.footer
    .footer__row
      .footer__row-col
        nav.menu.footer__menu
      .footer__row-col
        ul.menu__list
          each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
            li.menu__list
              a(href="#").menu__link #{item}
        .socials

    .footer__row.footer__text
      .footer__row-col.footer__row-col-left
        p Я веб-разработчик из Новосибирска, и этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
      .footer__row-col.footer__row-col-right
      p &copy;
      | Олег Огородников | создано с любовью в LoftSchool | 2018
