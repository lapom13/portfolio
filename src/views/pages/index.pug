extends ../auth.layout.pug

block content

  .wrapper.wrapper-index
    .auth
      .flipper
        .front
          .auth-block
            .auth-block__content
              .auth-block__user
                +heroUser('user--index-page')
              .auth-block__socials
                +socials(socials_array, 'socials--index-page')
            +menu(menuItems, 'auth-block__menu')
              
        .back
          .login
            .login__container
              .subtitle.dashTitle авторизуйтесь
              .login__input
                .login__icon-wrap
                  +icon("login", 'login__icon')
                input.login__field(type="text" placeholder="Логин")
              .login__input
                .login__icon-wrap
                  +icon("password", 'login__icon')
                input.login__field(type="password" placeholder="Пароль")
              .checkbox
                input(type="checkbox" checked="checked")
                .checkbox-fake
                span Я человек
              .login__text Вы точно не робот?
              .login__row
                .radio
                  input(type="radio" name="radio" checked="checked")
                  .radio-fake
                  span Да
                .radio
                  input(type="radio" name="radio")
                  .radio-fake
                  span Не уверен
            
            .login__row.login__btns
              button(type="button").btn.btn-main На главную
              button(type="button").btn.btn-exit Войти
            

